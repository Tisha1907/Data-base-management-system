Insert into Student
INSERT INTO Student VALUES (7369, 'Suresh', 'Delhi', 'Male', 'MCA');
INSERT INTO Student VALUES (7777, 'Ramesh', 'Mumbai', 'Male', 'BCA');
INSERT INTO Student VALUES (2233, 'Sunita', 'Chennai', 'Female', 'MBA');
INSERT INTO Student VALUES (8899, 'Sneha', 'Pune', 'Female', NULL);
INSERT INTO Student VALUES (9900, 'Sanjay', 'Kolkata', 'Male', 'MCA');

